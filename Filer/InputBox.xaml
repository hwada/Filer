<Window x:Class="Filer.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filer"
        mc:Ignorable="d"
        WindowChrome.ResizeGripDirection="None"
        WindowStyle="None"
        Title="InputBox" Height="30" Width="500" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox Name="TextBox" PreviewKeyDown="TextBox_PreviewKeyDown" />
    </Grid>
</Window>
